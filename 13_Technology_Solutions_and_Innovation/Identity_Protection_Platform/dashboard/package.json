    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/qrcode": "^1.5.5",
    "@types/ws": "^8.5.10",
    "typescript": "^5.3.0",
    "bun-types": "^1.0.0"
  },
  "keywords": [
    "government",
    "dashboard", 

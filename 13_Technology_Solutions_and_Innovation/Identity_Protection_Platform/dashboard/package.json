{
  "name": "@justice/government-dashboard",
  "version": "1.0.0",
  "description": "Government ID-based control panel for Justice Identity Protection Platform",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "scripts": {
    "dev": "bun run --hot src/server.ts",
    "build": "bun build src/server.ts --outdir dist --target node",

<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <LangVersion>12</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>Justice.Identity.Protection</PackageId>
    <Version>1.0.0</Version>
    <Authors>Justice Platform</Authors>
    <Company>justice.gov</Company>
    <Product>Justice Identity Protection Platform</Product>
    <Description>C#/.NET implementation of government-mandated digital identity protection with enterprise integration capabilities</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/justice-platform/identity-protection</PackageProjectUrl>
    <RepositoryUrl>https://github.com/justice-platform/identity-protection</RepositoryUrl>
    <PackageTags>identity;protection;blockchain;cardano;government;enterprise;dotnet</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <!-- Blockchain & Crypto -->
    <PackageReference Include="Nethereum.Web3" Version="4.17.2" />
    <PackageReference Include="CardanoSharp.Wallet" Version="2.0.1" />
    <PackageReference Include="NBitcoin" Version="7.0.31" />
    <PackageReference Include="System.Security.Cryptography.Algorithms" Version="4.3.1" />
    
    <!-- HTTP & JSON -->
    <PackageReference Include="Microsoft.AspNetCore.App" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="System.Net.Http.Json" Version="8.0.0" />
    
    <!-- Database & Storage -->
    <PackageReference Include="Microsoft.EntityFrameworkCore" Version="8.0.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="8.0.0" />
    <PackageReference Include="Microsoft.EntityFrameworkCore.PostgreSQL" Version="8.0.0" />
    <PackageReference Include="AWSSDK.S3" Version="3.7.307" />
    
    <!-- Image Processing & AI -->
    <PackageReference Include="OpenCvSharp4" Version="4.8.0.20230708" />
    <PackageReference Include="Microsoft.ML" Version="3.0.1" />
    <PackageReference Include="Microsoft.ML.Vision" Version="3.0.1" />
    
    <!-- Government Integration -->
    <PackageReference Include="Microsoft.Graph" Version="5.36.0" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.OpenIdConnect" Version="8.0.0" />
    
    <!-- Testing -->
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.8.0" />
    <PackageReference Include="xunit" Version="2.6.1" />
    <PackageReference Include="xunit.runner.visualstudio" Version="2.5.3" />
    <PackageReference Include="Moq" Version="4.20.69" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="modules\Cardano\Justice.Identity.Cardano.csproj" />
    <ProjectReference Include="modules\Ethereum\Justice.Identity.Ethereum.csproj" />
    <ProjectReference Include="modules\Government\Justice.Identity.Government.csproj" />
  </ItemGroup>

</Project>
